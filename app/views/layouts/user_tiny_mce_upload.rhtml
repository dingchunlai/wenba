<html>
  <head>
    <title>选择图片</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <base target='_self'></head>
  <body leftmargin="0" topmargin="0" marginwidth="0" marginheight="0" style="BACKGROUND:menu">
    <script language="JavaScript">
        // 图片来源单选点击事件
        function RadioClick(what){
            if (what=="url"){
                document.getElementById("d_checkfromfile").checked=false;
                document.getElementById("d_fromurl").disabled=false;
                document.getElementById("d_checkfromurl").checked=true;
                document.getElementById("ask_user_upload_uploaded_data").disabled=true;
                document.getElementById("text1").style.color="#666666";
                document.getElementById("text2").style.color="#000000";
            }else{
                document.getElementById("d_checkfromfile").checked=true;
                document.getElementById("d_fromurl").disabled=true;
                document.getElementById("d_checkfromurl").checked=false;
                document.getElementById("ask_user_upload_uploaded_data").disabled=false;
                document.getElementById("text2").style.color="#666666";
                document.getElementById("text1").style.color="#000000";
            }
        }

        function checkData() {
            if(document.getElementById("d_checkfromurl").checked){
                window.returnValue = document.getElementById("d_fromurl").value;
                window.close();
                return false;
            }
            if(document.getElementById("d_checkfromfile").checked){
                if(document.getElementById("ask_user_upload_uploaded_data").value=="")
                {
                    alert("请选择上传的图片");
                    return false;
                }
                pattern = /^.+\.(jpg|bmp|gif|png|jpeg)$/i;
                if(!pattern.exec(document.getElementById("ask_user_upload_uploaded_data").value))
                {
                    alert("不支持该图片格式，请重新选择上传的图片");
                    return false;
                }
                divProcessing.style.display="";
                document.getElementById("Submit1").value="正在上传中，请稍候……";
                return true;
            }
        }
    </script>    
    <%= yield %>
  </body>
</html>